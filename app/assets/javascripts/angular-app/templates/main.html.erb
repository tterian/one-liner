<md-toolbar>

  <div class="md-toolbar-tools">
    <h2>
      <span>ShareEm</span>
    </h2>
    <span flex></span>

    <div ng-show="user.signedIn" flex="20" class="md-searchbox">
      <div class="md-whiteframe-z1 md-searchbox-wrap">
        <input type="text" placeholder="Search a post..." ng-model="searchPost">
      </div>
      <md-icon class="md-search-icon" md-svg-src="assets/svg/md-search.svg"></md-icon>        
    </div>

    <md-button ng-hide="user.signedIn" ng-click="showSignIn($event)" class="md-raised" aria-label="Sign in">
      Sign In
    </md-button>

    <md-button ng-hide="user.signedIn" ng-click="showSignUp($event)" class="md-raised" aria-label="Sign up">
      Sign Up
    </md-button>

    <md-menu ng-show="user.signedIn" md-position-mode="target-right target">
      <div class="md-toolbar-tools md-toolbar-user" layout="row" ng-click="$mdOpenMenu($event)">
        <img ng-src="{{user.image}}" class="md-toolbar-avatar" alt="{{user.id}}" />
      </div>

      <md-menu-content width="4" >
        <md-menu-item>
          <md-button ng-click="redirectToProfile($event)">
              <div layout="row">
                <p flex>{{user.name}}</p>
              </div>
          </md-button>
        </md-menu-item>

        <md-menu-item>
          <md-button ng-click="signOut($event)">
              <div layout="row">
                <p flex>Sign Out</p>
              </div>
          </md-button>
        </md-menu-item>

      </md-menu-content>
    </md-menu>

  </div>

</md-toolbar>

<div class="md-main-content" layout="row">

  <span ng-hide="user.signedIn" flex="20"></span>
  <div  ng-show="user.signedIn" class="md-user" flex="20" flex-xs="100" layout="column">
    <md-card>
      <img ng-src="assets/cover1.png" class="md-card-image" alt="Cover">
      
      <md-card-title>
        <img ng-src="{{user.image}}" class="md-avatar" alt="{{user.name}}" />
        <md-card-title-text>
          <span class="md-headline md-user-title">{{user.name}}</span>
          <span class="md-subhead md-user-title">{{user.bio}}</span>
        </md-card-title-text>
      </md-card-title>

      <md-divider></md-divider>
      
      <div class="md-user-info" layout="row" layout-align="center">
        <div class="md-user-info-item">
          <span>POSTS</span>
          <h3>{{user.post_count}}</h3>
        </div>

        <div class="md-user-info-item">
          <span>FOLLOWING</span>
          <h3>{{user.follower_count}}</h3> 
        </div>

        <div class="md-user-info-item">
          <span>FOLLOWERS</span>
          <h3>{{user.following_count}}</h3>
        </div>
      </div>

    </md-card>
  </div>  

  <div class="md-posts" flex="60" flex-xs="100" layout="column">

    <md-card ng-show="user.signedIn">
      <div layout="row">          
        <img ng-src="{{user.image}}" class="md-poster-avatar" alt="{{user.id}}" />

        <md-input-container flex="90" md-no-float class="md-block">
          <input ng-model="post.content" type="text" placeholder="What's happening?"
                 ng-keypress="($event.charCode==13)?addPost(post):return">
        </md-input-container>

      </div>
    </md-card>


    <md-card ng-repeat="post in posts | filter:searchPost | orderBy:'-id' track by $index">
      <div layout="column">

        <div class="" layout="row">
          <img ng-src="{{post.user.image}}" class="md-poster-avatar" alt="{{post.user.id}}" />

          <div class="md-post-header" layout="column">
            <h3>
              {{post.user.name}}
              <span>
                <em am-time-ago="post.created_at" class="time-ago"></em>
              </span>
            </h3>
            <p>{{post.content}}</p>
          </div>
          
        </div>

        <md-divider></md-divider>

        <md-card-actions layout="row">

          <md-card-icon-actions>
            <md-button class="md-icon-button md-comment-icon" aria-label="Comment">
              <md-icon md-svg-icon="assets/svg/md-comment.svg"></md-icon>
            </md-button>
          </md-card-icon-actions>

          <md-menu md-position-mode="target-right target" >
            <md-button class="md-icon-button" aria-label="More" ng-click="$mdOpenMenu($event)">
              <md-icon md-svg-icon="assets/svg/md-more.svg"></md-icon>
            </md-button>

            <md-menu-content width="4">
              <md-menu-item>
                <md-button>
                    <div layout="row">
                      <p flex>Block</p>
                    </div>
                </md-button>
              </md-menu-item>

              <md-menu-item ng-show="user.id == post.user_id">
                <md-button ng-click="deletePost(post)">
                    <div layout="row">
                      <p flex>Delete Post</p>
                    </div>
                </md-button>
              </md-menu-item>
            </md-menu-content>
          </md-menu>

        </md-card-actions>
        
      </div>
    </md-card>

  </div>

  <span ng-hide="user.signedIn" flex="20"></span>
  <div  ng-show="user.signedIn" flex="20" flex-xs="100" layout="column">

    <md-card>
      <md-card-title>
        <md-card-title-text>
          <span class="md-headline">Who to follow?</span>
        </md-card-title-text>
      </md-card-title>

      <md-divider></md-divider>

    </md-card>

  </div>

</div>